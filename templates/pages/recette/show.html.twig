{% extends "base.html.twig" %}

{% block title %}
	Symrecette -
	{{ recette.name }}
{% endblock %}

{% block body %}
	<div class="container">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<h1 class="mt-4">{{ recette.name }}</h1>

		<div class="recette_image">
			<img style:"max-width: 100%" src="{{vich_uploader_asset(recette, 'imageFile')}}">
		</div>

		<p>La moyenne de cette recette est de: {{recette.average}}</p>

		
			<span class="badge bg-primary">Créée le
				{{ recette.createdAt|date('d/m/Y') }}</span>
		</div>

		<div class="mt-4">
			{% if recette.time %}
				<p>Temps (en minute) :
					
			{% else %}
				<p>Temps non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recette.time %}
				<p>Difficulté :
					{{ recette.difficulty }}/5</p>
			{% else %}
				<p>Difficulté non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recette.time %}
				<p>Pour
					{{ recette.nbPeople }}
					personnes</p>
			{% else %}
				<p>Nombre de personnes non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recette.price %}
				<p>Prix (en €) :
					{{ recette.price }}</p>
			{% else %}
				<p>Prix non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{{ recette.description|raw }}
		</div>

		<div class="mt-4">
			<p class="mt-4">Ingrédients</p>
			{% for ingredient in recette.ingredients %}
				<span class="badge bg-primary">{{ ingredient.name }}</span>
			{% endfor %}
		</div>
		<div class="mark">
		Votre note:{{form(form)}}
		</div>
		
		
		</div>
	{% endblock %}
